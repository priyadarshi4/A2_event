<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Membership Plans</title>
    <style>
        /* General Styles */
        body {
            margin: 0;
            padding: 0;
            font-family: 'Roboto', sans-serif;
            background: linear-gradient(135deg, #282c34, #3a3f47);
            color: #ffffff;
            display: flex;
            flex-direction: column;
            align-items: center;
            min-height: 100vh;
        }

        h1 {
            margin-top: 40px;
            font-size: 3rem;
            font-weight: bold;
            color: #ffcc29;
            text-shadow: 0px 4px 6px rgba(0, 0, 0, 0.3);
        }

        /* Pricing Section */
        .pricing-container {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            gap: 40px;
            margin-top: 40px;
            width: 90%;
        }

        .pricing-card {
            background: rgba(40, 44, 52, 0.8);
            border: 2px solid #ffcc29;
            border-radius: 16px;
            width: 300px;
            padding: 20px;
            text-align: center;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .pricing-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 15px 40px rgba(0, 0, 0, 0.5);
        }

        .plan-header {
            font-size: 1.8rem;
            font-weight: 600;
            margin-bottom: 10px;
            color: #ffcc29;
        }

        .plan-price {
            font-size: 2rem;
            font-weight: bold;
            margin: 10px 0;
            color: #76d275;
        }

        .cta-button {
            background: #ffcc29;
            color: #282c34;
            padding: 12px 30px;
            border: none;
            border-radius: 30px;
            font-size: 1rem;
            font-weight: bold;
            cursor: pointer;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            box-shadow: 0px 5px 15px rgba(0, 0, 0, 0.2);
        }

        .cta-button:hover {
            transform: scale(1.1);
            box-shadow: 0px 8px 20px rgba(0, 0, 0, 0.4);
        }

        /* Payment Section */
        .payment-section {
            display: none;
            margin-top: 40px;
            padding: 20px;
            width: 90%;
            max-width: 600px;
            background: rgba(40, 44, 52, 0.95);
            border-radius: 20px;
            border: 2px solid #ffcc29;
            box-shadow: 0px 10px 30px rgba(0, 0, 0, 0.5);
            animation: fadeIn 0.5s ease;
        }

        @keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .payment-header {
            font-size: 1.8rem;
            font-weight: 700;
            color: #ffcc29;
            margin-bottom: 20px;
            text-align: center;
        }

        .selected-plan {
            font-size: 1.2rem;
            margin-bottom: 10px;
            color: #ffffff;
            text-align: center;
        }

        .form-group {
            margin-bottom: 15px;
        }

        .form-group label {
            display: block;
            font-size: 0.9rem;
            margin-bottom: 5px;
            color: #ffcc29;
        }

        .form-group input {
            width: 100%;
            padding: 10px;
            font-size: 1rem;
            border: 1px solid #ffcc29;
            border-radius: 8px;
            background: rgba(255, 255, 255, 0.1);
            color: #ffffff;
        }

        .form-group input::placeholder {
            color: rgba(255, 255, 255, 0.7);
        }

        .submit-button {
            width: 100%;
            background: #ffcc29;
            color: #282c34;
            padding: 12px 20px;
            border: none;
            border-radius: 30px;
            font-size: 1rem;
            font-weight: bold;
            cursor: pointer;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            margin-top: 15px;
        }

        .submit-button:hover {
            transform: scale(1.05);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.4);
        }

        /* Responsive Design */
        @media (max-width: 768px) {
            .pricing-container {
                flex-direction: column;
                align-items: center;
            }

            .pricing-card {
                width: 90%;
            }
        }
    </style>
</head>
<body>
    <h1>Membership Plans</h1>
    <div class="pricing-container">
        <div class="pricing-card" onclick="showPayment('Entry Charge', 1500)">
            <div class="plan-header">Entry Charge</div>
            <div class="plan-price">₹1500</div>
            <button class="cta-button">Select Plan</button>
        </div>
        <div class="pricing-card" onclick="showPayment('Annual Membership', 25000)">
            <div class="plan-header">Annual Membership</div>
            <div class="plan-price">₹25000</div>
            <button class="cta-button">Select Plan</button>
        </div>
        <div class="pricing-card" onclick="showPayment('Enterprise', 2500)">
            <div class="plan-header">Enterprise</div>
            <div class="plan-price">₹2500</div>
            <button class="cta-button">Select Plan</button>
        </div>
    </div>

    <div class="payment-section" id="paymentSection">
        <div class="payment-header">Complete Your Payment</div>
        <div class="selected-plan" id="selectedPlan">Selected Plan: -</div>
        <form>
            <div class="form-group">
                <label for="name">Full Name</label>
                <input type="text" id="name" placeholder="Enter your name" required>
            </div>
            <div class="form-group">
                <label for="email">Email Address</label>
                <input type="email" id="email" placeholder="Enter your email" required>
            </div>
            <div class="form-group">
                <label for="card">Card Number</label>
                <input type="text" id="card" placeholder="xxxx-xxxx-xxxx-xxxx" required>
            </div>
            <div class="form-group">
                <label for="expiry">Expiry Date</label>
                <input type="text" id="expiry" placeholder="MM/YY" required>
            </div>
            <div class="form-group">
                <label for="cvv">CVV</label>
                <input type="text" id="cvv" placeholder="123" required>
            </div>
            <button type="submit" class="submit-button" id="payButton">Pay ₹0</button>
        </form>
    </div>

    <script>
        function showPayment(planName, price) {
            document.getElementById('paymentSection').style.display = 'block';
            document.getElementById('selectedPlan').innerText = `Selected Plan: ${planName}`;
            document.getElementById('payButton').innerText = `Pay ₹${price}`;
        }
    </script>
</body>
</html>
