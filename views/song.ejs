<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Artists and Songs</title>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500&family=Playfair+Display:wght@400;600&display=swap" rel="stylesheet">
    <style>
        /* Global Reset */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Roboto', sans-serif;
            background: #121212;
            color: #fff;
            line-height: 1.6;
        }

        h1, h2 {
            font-family: 'Playfair Display', serif;
            font-weight: 600;
            color: #f5a623;
        }

        h2 {
            margin-bottom: 20px;
        }

        /* Header */
        header {
            background-image: url("https://png.pngtree.com/background/20230612/original/pngtree-woman-wearing-headphones-sitting-with-abstract-background-picture-image_3173754.jpg");
            height: 100vh; /* Full-screen height */
            display: flex;
            flex-direction: column;
            justify-content: center; /* Vertically center content */
            align-items: center; /* Horizontally center content */
            text-align: center;
            color: white;
            padding: 0 20px; /* Optional padding for responsiveness */
        }

        header h1 {
            font-size: 5rem; /* Bigger font size for header title */
            margin-bottom: 10px;
        }

        header p {
            font-size: 1.5rem; /* Adjust subtitle size */
            margin-top: 10px;
        }

        .explore-button {
            margin-top: 20px;
            padding: 12px 25px;
            background-color: #f5a623;
            color: white;
            font-size: 1.2rem;
            font-weight: bold;
            border-radius: 30px;
            border: none;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        .explore-button:hover {
            background-color: #ff7f00;
        }

        /* Main container */
        .container {
            display: flex;
            justify-content: space-between;
            flex-wrap: wrap;
            padding: 20px;
        }

        /* Artists List */
        .artist-container {
            width: 30%; /* Decreased width for artists container */
            background: #333;
            padding: 20px;
            border-radius: 10px;
            margin-bottom: 30px;
        }

        .artist {
            display: flex;
            align-items: center;
            padding: 15px;
            background-color: #444;
            border-radius: 5px;
            margin: 10px 0;
            transition: background 0.3s ease;
            cursor: pointer;
        }

        .artist:hover {
            background-color: #f5a623;
        }

        .artist img {
            width: 50px;
            height: 50px;
            border-radius: 50%;
            margin-right: 15px;
        }

        .artist p {
            font-size: 1.2rem;
        }

        /* Songs List (Grid layout) */
        .song-container {
            width: 65%; /* Adjusted width for song container */
            background: #333;
            padding: 20px;
            border-radius: 10px;
            margin-bottom: 30px;
        }

        .songs-grid {
            display: grid;
            grid-template-columns: repeat(5, 1fr); /* Create 5 columns for songs */
            gap: 15px; /* Space between cards */
            margin-top: 20px;
        }

        .song {
            display: flex;
            flex-direction: column; /* Stack elements vertically */
            align-items: center;
            padding: 15px;
            background-color: #444;
            border-radius: 10px;
            height: 250px; /* Set fixed height for the song card */
            justify-content: space-between; /* Space between icon and name */
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .song:hover {
            transform: scale(1.05);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.7);
            cursor: pointer;
        }

        .song img {
            width: 80px; /* Slightly bigger icon */
            height: 80px;
            border-radius: 10px;
            margin-bottom: 15px; /* Space between icon and text */
        }

        .song p {
            font-size: 1.1rem;
            color: #f5a623;
            margin-bottom: 15px;
        }

        .play-button {
            padding: 8px 15px;
            background-color: #f5a623;
            border: none;
            color: white;
            font-weight: 500;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        .play-button:hover {
            background-color: #ff7f00;
        }

        /* Footer */
        footer {
            background: #333;
            color: #f5f5f5;
            padding: 40px 20px;
            text-align: center;
        }

        footer p {
            font-size: 1.2rem;
            opacity: 0.8;
        }

    </style>
</head>
<body>

    <!-- Header Section -->
    <header>
        <h1>A2_Event Music</h1>
        <p>Your Favorite Songs</p>
        <button class="explore-button" onclick="scrollToSongs()">Explore Music</button>
    </header>

    <!-- Main container for artists and songs -->
    <div class="container">
        <!-- Artists List -->
        <div class="artist-container">
            <h2>Artists</h2>
            <% artists.forEach(function(artist) { %>
                <div class="artist">
                    <img src="<%= artist.image %>" alt="<%= artist.name %>">
                    <p><%= artist.name %></p>
                </div>
            <% }) %>
        </div>

        <!-- Songs List -->
        <div class="song-container" id="songs">
            <h2>Songs</h2>
            <div class="songs-grid">
                <% songs.forEach(function(song) { %>
                    <div class="song">
                        <img src="<%= song.icon %>" alt="<%= song.title %>">
                        <p><%= song.title %></p>
                        <button class="play-button" onclick="playSong('<%= song.audio %>')">Play</button>
                    </div>
                <% }) %>
            </div>
        </div>
    </div>

    <!-- Footer Section -->
    <footer>
        <p>Â© 2024 Hindi Music | All Rights Reserved</p>
    </footer>

    <script>
        // Function to play the song
        function playSong(audioSrc) {
            const audioPlayer = new Audio(audioSrc);
            audioPlayer.play();
        }

        // Function to scroll to the song section
        function scrollToSongs() {
            const songsSection = document.getElementById('songs');
            songsSection.scrollIntoView({ behavior: 'smooth' });
        }
    </script>

</body>
</html>
