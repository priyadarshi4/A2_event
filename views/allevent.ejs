<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Events</title>
    <style>
        /* Basic Reset */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Roboto', sans-serif;
            background: linear-gradient(135deg, #282c34, #3a3f47);
            color: #fff;
            padding: 20px;
            text-align: center;
        }

        /* Title */
        h1 {
            font-size: 2.5rem;
            color: #ffcc29;
            margin-bottom: 30px;
            font-weight: 700;
        }

        /* Container for Event Cards */
        .events-container {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 20px;
            width: 100%;
            max-width: 1200px;
            margin: 0 auto;
        }

        .a {
            text-decoration: none;
            color: #ffcc29;
            font-weight: 600;
            margin-top: 10px;
            display: inline-block;
            transition: color 0.3s ease;
        }

        .a:hover {
            color: #ff9800;
        }

        /* Event Card */
        .event-card {
            background: rgba(0, 0, 0, 0.7);
            border-radius: 10px;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.2);
            overflow: hidden;
            animation: fadeIn 1.5s ease-in-out;
            transition: transform 0.3s;
        }

        .event-card:hover {
            transform: translateY(-5px);
        }

        .event-card img {
            width: 100%;
            height: 150px;
            object-fit: cover;
        }

        .event-card .event-info {
            padding: 15px;
            text-align: center;
        }

        .event-card .event-info h3 {
            margin-bottom: 10px;
            color: #ffcc29;
        }

        .event-card .event-info p {
            margin-bottom: 5px;
            color: #ccc;
        }

        /* Animation */
        @keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(-20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        /* Responsive Styles */
        @media (max-width: 768px) {
            h1 {
                font-size: 2rem;
            }

            .events-container {
                grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            }

            .event-card {
                width: 100%;
            }
        }
    </style>
</head>
<body>

    <h1>Menu Card</h1>

    <div class="events-container">
        <% events.forEach(function(event) { %>
            <div class="event-card">
                <img src="data:image/png;base64, <%= event.eventLogo.toString('base64') %>" alt="<%= event.eventLogo %>">
                <div class="event-info">
                    <h3><%= event.name %></h3>
                    <p>Price: $<%= event.prizeMoney %></p>
                    <br><br>
                    <a href="/admin/delete/<%= event._id %>" class="a">Delete event</a>
                </div>
            </div>
        <% }) %>
    </div>

</body>
</html>
